<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alimojarrad.encrypter">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:launchMode="singleTop" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CreateKey.CreateKeyActivity" android:launchMode="singleTop" android:screenOrientation="portrait"/>
        <activity android:name=".Encrypt.EncryptActivity" android:launchMode="singleTop" android:screenOrientation="portrait" />
        <activity android:name=".DrawImage.DrawImage" android:launchMode="singleTop" android:screenOrientation="portrait" />
        <activity android:name=".Encrypted.EncryptedActivity" android:launchMode="singleTop" android:screenOrientation="portrait"/>
        <activity android:name=".Decrypt.DecrypteActivity" android:launchMode="singleTop" android:screenOrientation="portrait"/>
        <activity android:name=".Decrypted.DecryptedActivity" android:launchMode="singleTop" android:screenOrientation="portrait"></activity>
    </application>

</manifest>